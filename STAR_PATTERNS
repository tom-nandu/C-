#include <iostream>

int main()
  {
     int n ; 
     std::cout << "enter value of n : "; 
     std::cin >> n ;
             
     for(int i=0;i<n;i++)
       {
         std::cout << "*" ;
       }
  }

/* EXPECTED OUTPUT : 
enter value of n : 5
*****
*/

---------------------------------------------------------------------------------------------------------------------------------------------------------
SQUARE PATTERN
---------------------------------------------------------------------------------------------------------------------------------------------------------

int main()
  {
     int n ; 
     std::cout << "enter value of n : "; 
     std::cin >> n ;
     for(int j=0;j<n;j++)
        {
           for(int i=0;i<n;i++)
             {
               std::cout << "* " ;
             }
            std::cout << std::endl;
          }
  }

/* EXPECTED OUTPUT : 

enter value of n : 5
* * * * * 
* * * * * 
* * * * * 
* * * * * 
* * * * * 

*/


---------------------------------------------------------------------------------------------------------------------------------------------------------
RIGHT ANGLED TRIANGLE PATTERN
---------------------------------------------------------------------------------------------------------------------------------------------------------

int main()
  {
     int n ; 
     std::cout << "enter value of n : "; 
     std::cin >> n ;
     for(int j=1;j<=n;j++)
        {
           for(int i=0;i<j;i++)
             {
               std::cout << "* " ;
             }
            std::cout << std::endl;
          }
  }

/* EXPECTED OUTPUT : 

enter value of n : 5
* 
* * 
* * * 
* * * * 
* * * * * 

*/


---------------------------------------------------------------------------------------------------------------------------------------------------------
LEFT ANGLED TRIANGLE PATTERN
---------------------------------------------------------------------------------------------------------------------------------------------------------

#include <iostream>

int main()
  {
     int n ; 
     std::cout << "enter value of n : "; 
     std::cin >> n ;
     for(int j=1;j<=n;j++)
        {
           for(int i=j;i<=n;i++)
             {
               std::cout << " " ;
             }
            for(int i=1;i<=j;i++)
             {
               std::cout << " *" ;
             }
               std::cout << std::endl;
          }
  }

/* EXPECTED OUTPUT : 

enter value of n : 5
          *
        * *
      * * *
    * * * *
  * * * * *

*/

