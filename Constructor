#include <iostream>
#include <string>

class Student 
{
    public:
    
    std::string Name ;
    int Roll_no ;
    double Marks ;
    
    Student(std::string name , int roll , double marks) 
    {
        this->Name    = name  ;
        this->Roll_no = roll  ;
        this->Marks   = marks ;
    }
    
    void display()
    {
        std::cout << "Name: " << Name << std::endl;
        std::cout << "Roll No: " << Roll_no <<   std::endl;
        std::cout << "Marks: " << Marks <<   std::endl;
    }
};


int main()
{
    Student One("Nandu" , 29 , 89 ) ;
    One.display();
}

----------------------------------------------------------------------------------------------------------------------------------------------------------------------------
START & STOP CONCEPT IN CONSTRUCTOR 
----------------------------------------------------------------------------------------------------------------------------------------------------------------------------
#include <iostream>
#include <string>

class Engine
{
   public:

   bool is_running ;
   
   Engine()
   {
       is_running = false ;
   }
   void start_engine()
   {
       if(!is_running)
       {
           is_running = true ; 
           std::cout << "Engine started." << std::endl;
       }
       else 
       {
           std::cout << "Already it is started." << std::endl; 
       }
   }
   
   void stop_engine()
   {
       if(is_running)
       {
           is_running = false;
           std::cout << "Engine stopped ! " << std::endl;
       }
       else 
       {
           std::cout << "Already Engine stopped ! " << std::endl; 
       }
   }
};
   
   int main()
   {
       Engine car ;
       car.start_engine();
       car.start_engine();
       car.stop_engine();
       car.stop_engine();
   }
